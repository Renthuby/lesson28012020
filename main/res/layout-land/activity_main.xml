<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    android:layout_weight="1">

    <fragment android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:name="com.example.kuteginfragmenti.Button_fragment"
                          tools:layout="@layout/button_fragment"
                          android:id="@+id/button_fragment"
/>
    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:name="com.example.kuteginfragmenti.Checkbox_fragment"
              tools:layout="@layout/checkbox_fragment"
              android:id="@+id/checkbox_fragment"

    />
    </LinearLayout>
    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:name="com.example.kuteginfragmenti.Image_fragment"
              tools:layout="@layout/image_fragment"
              android:id="@+id/image_fragment"
              android:layout_weight="1"
    />



</LinearLayout>